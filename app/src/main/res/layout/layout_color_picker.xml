<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ir.kotlin.kavehcolorpicker.KavehColorPicker
        android:id="@+id/mainColorPicker"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintBottom_toTopOf="@id/svBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ir.kotlin.kavehcolorpicker.KavehHueSlider
        android:id="@+id/svBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="@id/mainColorPicker"
        app:layout_constraintStart_toStartOf="@id/mainColorPicker"
        app:layout_constraintTop_toBottomOf="@id/mainColorPicker" />

    <ir.kotlin.kavehcolorpicker.KavehColorAlphaSlider
        android:id="@+id/opacityBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mainColorPicker"
        app:layout_constraintStart_toStartOf="@id/mainColorPicker"
        app:layout_constraintTop_toBottomOf="@id/svBar" />

</androidx.constraintlayout.widget.ConstraintLayout>