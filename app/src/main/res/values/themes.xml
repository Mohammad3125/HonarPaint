<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HonarPaint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.HonarPaint.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HonarPaint.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HonarPaint.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HonarPaint.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HonarPaint.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HonarPaint.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HonarPaint.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HonarPaint.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.HonarPaint.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HonarPaint.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HonarPaint.Overline</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HonarPaint.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HonarPaint.Subtitle2</item>
        <item name="sliderStyle">@style/brushesSlider</item>

        <item name="colorSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:windowBackground">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?colorSurface</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

    </style>

